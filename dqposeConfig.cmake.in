# CMake dqpose module
#
# It defines the following variables:
# dqpose_FOUND         - TRUE
# dqpose_INCLUDE_DIR  - The dqpose include directory
# dqpose_LIBRARY_DIR  - The dqpose library directory
# dqpose_LIBRARY     - The dqpose library
# dqpose_VERSION       - The dqpose version in the form <major>.<minor>



@PACKAGE_INIT@

macro(set_and_check _var _file)
  set(${_var} "${_file}")
  if(NOT EXISTS "${_file}")
    message(FATAL_ERROR "File or directory ${_file} referenced by variable ${_var} does not exist !")
  endif()
endmacro()

set(dqpose_VERSION @PACKAGE_VERSION@)

set_and_check(dqpose_INCLUDE_DIR "${PACKAGE_PREFIX_DIR}/include")

set(dqpose_INCLUDE_DIR "${dqpose_INCLUDE_DIR}" CACHE STRING "Include path for dqpose and its dependencies")

set_and_check(dqpose_LIBRARY_DIR "${PACKAGE_PREFIX_DIR}/lib")

set(dqpose_LIBRARY_DIR "${dqpose_LIBRARY_DIR}" CACHE STRING "Library path for dqpose and its dependencies")

find_library(dqpose_LIBRARY NAMES dqpose
    PATHS ${dqpose_LIBRARY_DIR} NO_DEFAULT_PATH)


include(FindPackageHandleStandardArgs)
find_package_handle_standard_args(dqpose DEFAULT_MSG dqpose_INCLUDE_DIR dqpose_LIBRARY_DIR dqpose_LIBRARY dqpose_VERSION)

include ( "${CMAKE_CURRENT_LIST_DIR}/dqposeTargets.cmake" )